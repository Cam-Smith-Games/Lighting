{
    "compilerOptions": {
      "checkJs": true, // this applies @ts-check to every js file
      "lib": [ "es6", "dom", "es2017" ],
      "target": "es2017",
  
      // WARNINGS
      "noImplicitAny": true,
      "noImplicitThis": true,
      "noImplicitReturns": true,
      "noUnusedParameters": true,
      "allowUnreachableCode": false,
      "allowUnusedLabels": false,
      "alwaysStrict": true,
      "noUnusedLocals": true,

      
    },
       
    "typeAcquisition": {
      "include": ["jquery"]
    }

  }